//백준 2217
#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

vector<int> a;

int main(){
    
    int n, result = 0;
    cin >> n;
    for(int i = 0;i<n;i++){
        int x;
        cin >> x;
        a.push_back(x);
    }
    
    sort(a.begin(), a.end());
    
    for(int i = 0; i<n;i++){
        if(result < a[i] * (n - i))
            result = a[i] * (n - i);
    }
    
    cout << result;
    
    return 0;
}
