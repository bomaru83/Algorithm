//백준 11399
#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;
vector<int> a;

int main(){
    int n, sum=0, result = 0;
    cin >> n;
    for(int i = 0;i<n;i++){
        int x;
        cin >> x;
        a.push_back(x);
    }
    
    sort(a.begin(), a.end());
    for(int i = 0;i<n;i++){
        sum += a[i];
        result += sum;
    }
    
    cout << result << endl;
    
    return 0;
}
